<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="180.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.traiteur.Views.NouvelArticleController">
   <children>
      <Label layoutX="14.0" layoutY="23.0" text="Nom">
         <font>
            <Font name="Calibri" size="14.0" />
         </font>
      </Label>
      <Label layoutX="17.0" layoutY="58.0" text="Prix">
         <font>
            <Font name="Calibri" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="TextNom" layoutX="51.0" layoutY="19.0" prefHeight="26.0" prefWidth="335.0" />
      <TextField fx:id="TextPrix" layoutX="51.0" layoutY="54.0" prefHeight="26.0" prefWidth="335.0" />
      <RadioButton fx:id="RadioButtonKilo" layoutX="51.0" layoutY="92.0" mnemonicParsing="false" text="Prix au kilo">
         <font>
            <Font name="Calibri" size="14.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="RadioButtonPiece" layoutX="51.0" layoutY="111.0" mnemonicParsing="false" text="Prix à la pièce">
         <font>
            <Font name="Calibri" size="14.0" />
         </font>
      </RadioButton>
      <Button fx:id="ButtonAjouterArticle" onAction="#ajouterArticle" layoutX="51.0" layoutY="142.0" mnemonicParsing="false" text="Ajouter">
         <font>
            <Font name="Calibri" size="13.0" />
         </font>
      </Button>
      <Button fx:id="ButtonAnnulerArticle" onAction="#closeStage" layoutX="114.0" layoutY="142.0" mnemonicParsing="false" text="Annuler">
         <font>
            <Font name="Calibri" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
